#include <iostream>
#include <string>
#include "Location.h"

using namespace std;

class Location {
private:
	string cityName;
	string countryName;
	int region;
	int duplicate = 0;
	int refNumber;
	int cityLatDeg;
	int cityLatMin;
	string cityLatDirection;
	int cityLonDeg;
	int cityLonMin;
	string cityLonDirection;
public:
	Location(string name, string country, int latDeg, int latMin, string latDir, int lonDeg, int lonMin, string lonDir){
		setCityName(name);
		setCountryName(country);
		setLatDeg(latDeg);
		setLatMin(latMin);
		setLatDirection(latDir);
		setLonDeg(lonDeg);
		setLonMin(lonMin);
		setLonDirection(lonDir);

	}

	void setCityName(string name){
		cityName = name;
	}

	string getCityName() {
		return cityName;
	}

	void setCountryName(string country){
		countryName = country;
	}

	string getCountryName(){
		return countryName;
	}

	void setRegion(int region){
		this->region = region;
	}

	int getRegion(){
		return region;
	}

	void setRefNumber(int ref){
		refNumber = ref;
	}

	int getRefNumber(){
		return refNumber;
	}

	void setLatDeg(int deg){
		cityLatDeg = deg;
	}

	void setLatMin(int min){
		cityLatMin = min;
	}

	void setLatDirection(string dir){
		cityLatDirection = dir;
	}

	void setLonDeg(int lon){
		cityLonDeg	 = lon;
	}

	void setLonMin(int min){
		cityLonMin = min;
	}

	void setLonDirection(string dir){
		cityLonDirection = dir;
	}

	int getLatDeg(){
		return cityLatDeg;
	}

	int getLatMin(){
		return cityLatMin;
	}

	string getLatDirection(){
		return cityLatDirection;
	}

	int getLonDeg(){
		return cityLonDeg;
	}

	int getLonMin(){
		return cityLonMin;
	}

	string getLonDirection(){
		return cityLonDirection;
	}

};

